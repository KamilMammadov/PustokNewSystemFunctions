@using DemoApplication.Areas.Client.ViewModels.Account
@model EditAddressViewModel

<form method="post" asp-route="client-account-address-edit">
	<div class="row">
		<div class="col-lg-6 col-12  mb--30">
			<input asp-for="Address"  placeholder="Address">
		</div>
		<div class="col-lg-6 col-12  mb--30">
			<input asp-for="PhoneNumber"  placeholder="PhoneNumber">
		</div>
		<div class="col-12 mb-3">
			<button type="submit" class="btn btn--primary">Save Changes</button>
		</div>
	</div>
</form>